@model IEnumerable<Web.Models.Camera>

@{
    ViewData["Title"] = "Kameramızdan";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Kameramızdan</h1>
    <nav>
        <ul class="nav nav-pills nav-fill">
            <li class="nav-item">
                <a class="nav-link" href="/GeziRehberi/Fotograflar">Fotoğraflar</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/GeziRehberi/Videolar">Videolar</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/GeziRehberi/Haritalar">Haritalar</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/GeziRehberi/Kameramizdan">Kameramızdan</a>
            </li>
        </ul>
    </nav>
    <div class="row mt-4">
        @foreach (var camera in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <img class="card-img-top" src="@camera.ImageUrl" alt="@camera.Title">
                    <div class="card-body">
                        <h5 class="card-title">@camera.Title</h5>
                        <p class="card-text">@camera.Description</p>
                    </div>
                </div>
            </div>
        }
        }
    </div>
</div>
