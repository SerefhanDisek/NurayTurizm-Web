@model IEnumerable<Web.Models.Video>

@{
    ViewData["Title"] = "Seyahatlerimizden Videolar";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Seyahatlerimizden Videolar</h1>
    <nav>
        <ul class="nav nav-pills nav-fill">
            <li class="nav-item">
                <a class="nav-link" href="/GeziRehberi/Fotograflar">Fotoğraflar</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/GeziRehberi/Videolar">Videolar</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/GeziRehberi/Haritalar">Haritalar</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/GeziRehberi/Kameramizdan">Kameramızdan</a>
            </li>
        </ul>
    </nav>
    <div class="row mt-4">
        @foreach (var video in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card">
                    <video class="card-img-top" controls>
                        <source src="@video.VideoUrl" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                    <div class="card-body">
                        <h5 class="card-title">@video.Title</h5>
                        <p class="card-text">@video.Description</p>
                    </div>
                </div>
            </div>
        }
        }
    </div>
</div>
