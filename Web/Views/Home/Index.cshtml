@{
    ViewData["Title"] = "Ana Sayfa";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<div class="hero-section">
    <div class="hero-content">
        <h1 class="custom-heading">Hayalindeki tatili Nuray Turizm ile planla!</h1>
        <form action="/Search/Results" method="get" class="search-form">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" name="destination" class="form-control" placeholder="Nereye gitmek istersin?" />
                </div>
                <div class="form-group col-md-2">
                    <input type="text" name="checkin" class="form-control" placeholder="Giriş Tarihi" />
                </div>
                <div class="form-group col-md-2">
                    <input type="text" name="checkout" class="form-control" placeholder="Çıkış Tarihi" />
                </div>
                <div class="form-group col-md-2">
                    <select name="guests" class="form-control">
                        <option value="2">2 Misafir</option>
                        <option value="1">1 Misafir</option>
                        <option value="3">3 Misafir</option>
                        <option value="4">4 Misafir</option>
                    </select>
                </div>
                <div class="form-group col-md-2">
                    <button type="submit" class="btn btn-primary btn-block"><i class="fa fa-search"></i> Ara</button>
                </div>
            </div>
        </form>
        <div class="popular-searches">
            <p class="custom-paragraph">Popüler Aramalar: <a href="/Search/Results?query=Yaz Fırsatları">Yaz Fırsatları</a> | <a href="/Search/Results?query=Son Dakika Tatil Fırsatlı Oteller">Son Dakika Tatil Fırsatlı Oteller</a> | <a href="/Search/Results?query=Kıbrıs Otelleri">Kıbrıs Otelleri</a> | <a href="/Search/Results?query=Kurban Bayramı Otelleri">Kurban Bayramı Otelleri</a></p>
        </div>
    </div>
</div>


<div class="container mt-4">
    <div id="tourCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#tourCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#tourCarousel" data-slide-to="1"></li>
            <li data-target="#tourCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/img/uludag_turu.jpg" class="d-block w-100" alt="Uludağ Turu">
            </div>
            <div class="carousel-item">
                <img src="~/img/bozcaada_turu.jpg" class="d-block w-100" alt="Bozcaada Turu">
            </div>
            <div class="carousel-item">
                <img src="~/img/gumulduer_turu.jpg" class="d-block w-100" alt="Gümüldür Turu">
            </div>
        </div>
        <a class="carousel-control-prev" href="#tourCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#tourCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <h2>Popüler Turlar</h2>
            <p>Türkiye'nin en popüler turlarını keşfedin.</p>
