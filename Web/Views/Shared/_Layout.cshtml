<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Nuray Turizm</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light ">
            
            <a class="navbar-brand" href="/">
                <img src="~/img/NT.png" alt="Nuray Turizm" class="logo" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-between" id="navbarNav" style="background-color: #4CAF50;">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">ANA SAYFA</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/gezi-rehberi">İNTERAKTİF GEZİ REHBERİ</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="turlarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            TURLAR
                        </a>
                        <div class="dropdown-menu" aria-labelledby="turlarDropdown">
                            <h6 class="dropdown-header">YURT İÇİ TURLARI</h6>
                            <a class="dropdown-item" href="#">ULUDAĞ TURLARI</a>
                            <a class="dropdown-item" href="#">KARADENİZ TURLARI</a>
                            <a class="dropdown-item" href="#">PAMUKKALE TURLARI</a>
                            <a class="dropdown-item" href="#">KAPLICA TURLARI</a>
                            <a class="dropdown-item" href="#">GAP TURLARI</a>
                            <a class="dropdown-item" href="#">GÜNÜBİRLİK TURLAR</a>
                            <a class="dropdown-item" href="#">EGE-AKDENİZ TURLARI</a>
                            <a class="dropdown-item" href="#">İSTANBUL TURLARI</a>
                            <a class="dropdown-item" href="#">KAPADOKYA TURLARI</a>
                            <div class="dropdown-divider"></div>
                            <h6 class="dropdown-header">YURT DIŞI TURLARI</h6>
                            <a class="dropdown-item" href="#">BALKAN TURLARI</a>
                            <a class="dropdown-item" href="#">UMRE ORGANİZASYONLARI</a>
                            <a class="dropdown-item" href="#">İTALYA TURLARI</a>
                            <a class="dropdown-item" href="#">EGE ADALARI TURLARI</a>
                            <a class="dropdown-item" href="#">BATUM - GÜRCİSTAN TURLARI</a>
                            <a class="dropdown-item" href="#">AZERBAYCAN TURLARI</a>
                            <a class="dropdown-item" href="#">DUBAI TURLARI</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/seyahat-ipuclari">SEYAHAT İPUÇLARI</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/kampanyalar">KAMPANYALAR</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/hakkimizda">HAKKIMIZDA</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/iletisim">İLETİŞİM</a>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <input class="form-control mr-sm-2" type="search" placeholder="Ara" aria-label="Search">
                    <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Ara</button>
                </form>
                <ul class="navbar-nav ml-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Profile">@User.Identity.Name</a>
                        </li>
                        <li class="nav-item">
                            <form method="post" asp-controller="Account" asp-action="Logout" class="form-inline">
                                <button type="submit" class="btn btn-link nav-link" style="cursor:pointer;">Çıkış Yap</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Register">KAYIT OL</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Account/Login">GİRİŞ YAP</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" href="#" id="language-dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            TR
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer" style="background-color: #4CAF50;">
        <!-- Footer rengi yeşil -->
        <div class="container">
            &copy; 2023 - Nuray Turizm - <a asp-area="" asp-controller="Home" asp-action="Privacy" style="color: white;">Gizlilik</a>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

