@model DataAccess.Models.Tur

@{
    ViewData["Title"] = "Tur Düzenle";
}

<h2>Tur Düzenle</h2>

<h4>Tur</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="Ad" class="control-label"></label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Açıklama" class="control-label"></label>
                <input asp-for="Açıklama" class="form-control" />
                <span asp-validation-for="Açıklama" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AktifMi" class="control-label"></label>
                <input asp-for="AktifMi" class="form-control" />
                <span asp-validation-for="AktifMi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ÜyeOluşTarihi" class="control-label"></label>
                <input asp-for="ÜyeOluşTarihi" class="form-control" />
                <span asp-validation-for="ÜyeOluşTarihi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YurtİçiMi" class="control-label"></label>
                <input asp-for="YurtİçiMi" class="form-control" />
                <span asp-validation-for="YurtİçiMi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YurtDışıMı" class="control-label"></label>
                <input asp-for="YurtDışıMı" class="form-control" />
                <span asp-validation-for="YurtDışıMı" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geri Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
