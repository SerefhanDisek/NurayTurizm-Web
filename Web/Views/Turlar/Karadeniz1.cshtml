@{
    ViewData["Title"] = "Karadeniz Turu 1";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <div id="tourCarousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/img/karadeniz-tour1.jpg" alt="Karadeniz Turu">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/img/karadeniz-tour2.jpg" alt="Karadeniz Turu">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/img/karadeniz-tour3.jpg" alt="Karadeniz Turu">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#tourCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#tourCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-8">
            <h2 class="mb-3">Karadeniz Turu 4 Gece - 5 Gün Konaklamalı</h2>
            <p><strong>Tur Tarihleri:</strong> 28 Haziran - 30 Ekim 2024 arası</p>
            <p><strong>Gezi Programı:</strong></p>
            <ul>
                <li>Yayla Gezisi - <span class="text-primary">150 TL</span></li>
                <li>Fırtına Deresi Rafting - <span class="text-primary">90 TL</span></li>
                <li>Ayder Yaylası - <span class="text-primary">85 TL</span></li>
                <li>Uzungöl - <span class="text-primary">2,000 TL</span></li>
            </ul>
            <p><strong>Ulaşım:</strong> Otobüs ile</p>
            <p><strong>Konaklama:</strong> X Otel'de gerçekleşecek olup, otelimiz 5 yıldızlı her şey dahil konsepttedir.</p>
            <button class="btn btn-primary">Tura Katıl</button>
        </div>
        <div class="col-md-4">
            <img src="~/img/karadeniz-hotel.jpg" alt="Otel Görseli" class="img-fluid rounded">
        </div>
    </div>
</div>
