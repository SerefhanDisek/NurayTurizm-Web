@{
    ViewData["Title"] = "Uludağ Turları";
}

<h1>Uludağ Turları</h1>
<div class="tour-container">
    <div class="tour-card">
        <img src="~/img/uludag-tour1.jpg" alt="Uludağ Yaylalar Turu" class="tour-image">
        <div class="tour-details">
            <h2>Uludağ Yaylalar Turu</h2>
            <p>Bursa, Kent Meydanı Hareketli</p>
            <p>7 gece - 8 gün</p>
            <p>10 Mayıs - 18 Mayıs</p>
        </div>
        <div class="tour-price">
            <p>Çift Kişilik Oda, Kişi Başı:</p>
            <span class="price">5,600 TL</span>
            <button class="btn btn-primary">Turu İncele</button>
        </div>
    </div>

    <div class="tour-card">
        <img src="~/img/uludag-tour2.jpg" alt="Uludağ Kayak Turu" class="tour-image">
        <div class="tour-details">
            <h2>Uludağ Kayak Turu</h2>
            <p>Bursa, Kent Meydanı Hareketli</p>
            <p>4 gece - 5 gün</p>
            <p>14 Nisan - 16 Nisan</p>
        </div>
        <div class="tour-price">
            <p>Çift Kişilik Oda, Kişi Başı:</p>
            <span class="price">7,500 TL</span>
            <button class="btn btn-primary">Turu İncele</button>
        </div>
    </div>

    <div class="tour-card">
        <img src="~/img/uludag-tour3.jpg" alt="Uludağ Kamp Turu" class="tour-image">
        <div class="tour-details">
            <h2>Uludağ Kamp Turu</h2>
            <p>Bursa, Kent Meydanı Hareketli</p>
            <p>5 gece - 6 gün</p>
            <p>24 Ocak - 31 Ocak</p>
        </div>
        <div class="tour-price special-offer">
            <p>Aylık Fırsat!</p>
            <span class="price old-price">8,000 TL</span>
            <span class="price">4,500 TL</span>
            <button class="btn btn-primary">Turu İncele</button>
        </div>
    </div>
</div>
