@model IEnumerable<DataAccess.Models.Tur>

@foreach (var tour in Model)
{
    <div class="tour-item mb-4 p-3 bg-white shadow-sm rounded">
        <div class="row">
            <div class="col-md-4">
                <img src="~/img/@tour.ID.jpg" alt="@tour.Ad" class="img-fluid rounded">
            </div>
            <div class="col-md-5">
                <h2 class="h5">@tour.Ad</h2>
                <p>@tour.Açıklama</p>
                <p>Oluş Tarihi: @tour.ÜyeOluşTarihi.ToShortDateString()</p>
                <p>@(tour.YurtİçiMi ? "Yurt İçi" : "Yurt Dışı")</p>
            </div>
            <div class="col-md-3 text-center d-flex flex-column justify-content-center">
                <p class="mb-2">Fiyat:</p>
                <span class="price h4 mb-3">Belirtilmedi</span>
                <button class="btn btn-primary">Turu İncele</button>
            </div>
        </div>
    </div>
}
